<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:gravity="center_horizontal">

            <!-- App icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/icono_datacloud_sv"
                android:contentDescription="Data Cloud SV"
                android:layout_marginBottom="16dp" />

            <!-- App name -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Cloud SV"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- App version -->
            <TextView
                android:id="@+id/appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versi칩n 1.0.0"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- App description -->
            <TextView
                android:id="@+id/appDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta aplicaci칩n te permite almacenar y gestionar tus contrase침as de forma segura mediante cifrado. Puedes exportar e importar tus datos protegidos con tu clave maestra."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Developer info -->
            <TextView
                android:id="@+id/developerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desarrolladores:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/developerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ever Samuel V치squez Canales (Ever-VC)"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/developerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: evervc.dev@gmail.com"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/developerGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GitHub: github.com/Ever-VC"
                android:autoLink="web"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/secondDeveloperName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alexander Antolino Retana Medina"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/secondDeveloperEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: rm21077@ues.edu.sv"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/secondDeveloperGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GitHub: github.com/AntolinoRetana"
                android:autoLink="web"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Optional license -->
            <TextView
                android:id="@+id/license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta app es de uso personal. Todos los derechos reservados."
                android:textSize="14sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>